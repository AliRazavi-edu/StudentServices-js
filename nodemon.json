{
  "restartable": "rs",
  "colours": true,
  "ignore": [
    ".git/*",
    "node_modules/*",
    ".vscode/*",
    ".github/*",
    "docs/*",
    "ex/*"
  ],
  "execMap": {
    "js": "node --harmony"
  },
  "legacyWatch": true,
  "watch": ["*.*"],
  "watchOptions": {},
  "runOnChangeOnly": false,
  "verbose": true,
  "stdin": true,
  "stdout": true,
  "delay": 2500,
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json"
}
