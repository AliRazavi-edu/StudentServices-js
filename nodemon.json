{
  "restartable": "rs",
  "colours": true,
  "ignore": [
    ".git/*",
    "node_modules/*",
    ".vscode/*",
    ".github/*",
    "docs/*",
    "ex/*"
  ],
  "execMap": {
    "js": "node --harmony"
  },
  "legacyWatch": true,
  "watch": ["*.*"],
  "runOnChangeOnly": false,
  "verbose": true,
  "delay": 25000,
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,jsx"
}
