{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "mongo": true,
    "es6": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended",
    "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "no-empty": "warn",
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error"
  }
}
